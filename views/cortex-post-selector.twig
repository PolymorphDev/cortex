<div class="cortex-post-selector-post-list-group">

	{% for group in groups %}

		<h3>{{ group.name }}</h3>

		<table class="wp-list-table widefat fixed striped pages cortex-post-selector-post-list">
			<thead>
				<tr>
					<th class="manage-column column-title column-primary">Title</th>
					<th class="manage-column column-author"></th>
				</tr>
			</thead>
			<tbody>
				{% for post in group.posts %}
					<tr class="cortex-post-selector-post-list-item">
						<td class="cortex-post-selector-post-list-item-title column-title">{{ post.title }}</td>
						<td class="cortex-post-selector-post-list-item-check column-author">
							<a href="#" data-document="{{ post.id }}">{{ __('Select', 'cortex') }}</a>
						</td>
					</tr>
				{% endfor %}
			</tbody>
			<tfoot>
				<tr>
					<th class="manage-column column-title column-primary">Title</th>
					<th class="manage-column column-author"></th>
				</tr>
			</tfoot>
		</table>

	{% endfor %}

</div>